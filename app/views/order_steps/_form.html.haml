.container
  .row
    %h5.center-align
      = link_to "< Previous Step", previous_wizard_path unless step == :shipping
      = step.capitalize
      = link_to "Next Step >", next_wizard_path unless step == :confirmation
  .row
    .col.l4.m4.s12.order-info-form
      = form_for @order, url: wizard_path do |f|
        - if @order.errors.any?
          .error_messages
            %h2
              = pluralize(@order.errors.count, "error")
              prohibited this user from being saved:
            %ul
              - @order.errors.full_messages.each do |msg|
                %li= msg
        = yield f
        .actions
          = f.button "Accept", class: "waves-effect waves-light btn" 
    .col.l8.m8.s12
      -# %h5.center-align.underscore
      .card.check
        = render "#{step}_preview"