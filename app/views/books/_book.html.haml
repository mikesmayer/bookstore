- if can? :manage, :all
  %tr
    %td= book.title
    %td= book.description
    %td= book.price
    %td= book.quantity
    %td= book.author.full_name
    %td= book.category.category_name
    %td= link_to 'Show', book
    %td= link_to 'Edit', edit_book_path(book)
    %td= link_to 'Destroy', book, method: :delete,  data: { confirm: 'Are you sure?' }
- else
  .card.hoverable
    .card-image.waves-effect.waves-block.waves-light.activator
      = image_tag book.cover_url.to_s, class: "activator"
    .card-content.valign-wrapper
      %h6.card-book-price.left-align
        $
        = book.price
      .add-to-cart-btn
        = link_to  add_to_cart_book_order_path(@order_as_cart, book_id: book.id),
                         class: "waves-eff waves-light btn-floating card-button right",
                         id: "add_to_cart_book_#{book.id}",
                         method: :post, remote: true do
          %i.material-icons shopping_cart
    .card-reveal.card-info
      %span.card-title.grey-text.text-darken-4
        %i.material-icons.right  close
      %ul
        %li.book-info
          = book.author.full_name
        %li.book-info
          = book.title
        %li.truncate
          = book.description
        %li
          = link_to 'Full Info', book
      .valign-wrapper
        %h6.card-book-price.left-align
          $
          = book.price
        .add-to-cart-btn
          = link_to  add_to_cart_book_order_path(@order_as_cart, book_id: book.id),
                     class: "waves-eff waves-light btn-floating card-button right",
                     method: :post, remote: true do
            %i.material-icons shopping_cart



